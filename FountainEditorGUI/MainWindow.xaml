<Window x:Name="FountainEditor" x:Class="FountainEditorGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FountainEditor" Height="350" Width="525" Background="#FF7F7F7F">
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFB2D5E6" Offset="0"/>
            <GradientStop Color="#FF8DC7E2" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Stretch" FontFamily="Courier Prime" Margin="0,0,0,0" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" AcceptsTab="True"/>
        <Menu IsMainMenu="True" Height="20" Width="Auto" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
