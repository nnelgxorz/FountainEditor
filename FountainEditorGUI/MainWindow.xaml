<Window x:Name="Window" x:Class="FountainEditorGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="(intEXT) Screenplay Editor" Height="350" Width="525" WindowState="Maximized" Background="#515255">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Height="25" Width="Auto" Grid.ColumnSpan="4" Grid.Row="0" Background="#595e5e" Foreground="#e1e1e1" FontSize="16">
            <MenuItem Header="File">
                <MenuItem Header="New"/>
                <MenuItem Header="Open" Click="OpenItem_Click"/>
                <MenuItem Header="Save As" Click="SaveAs_Click"/>
                <MenuItem Header="Exit" Click="ExitItem_Click"/>
            </MenuItem>
            <MenuItem Header="Print"/>
            <MenuItem Header="Options"/>
            <MenuItem Header="Help">
            </MenuItem>
        </Menu>
        
        <TextBox Grid.Column="2" Grid.Row="2" FontFamily="Courier Prime" FontSize="16"
                 AcceptsReturn="True" AcceptsTab="True" ScrollViewer.VerticalScrollBarVisibility="Visible" 
                 Text="{Binding ScriptText, ElementName=Window, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap">
        </TextBox>
        
        <ListView x:Name="Outliner" Grid.Column="0" Grid.Row="2" Background="#515255" Foreground="#d2d2d2" 
                  FontFamily="Courier Prime" FontSize="16" BorderBrush="{x:Null}"
                  ItemsSource="{Binding OutlineElements, ElementName=Window}"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Width="{Binding ElementName=Outliner, Path=ActualWidth}">
                        <TextBlock Text="{Binding Text}" FontSize="16" HorizontalAlignment="Left"
                                   FontFamily="courier prime" FontWeight="Light" 
                                   Margin="10,10,30,10" FontStyle="Italic"
                                   TextTrimming="WordEllipsis" TextWrapping="Wrap">
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>

        <TextBox Grid.Column="2" Grid.Row="0" IsReadOnly="True" Background="Transparent" BorderBrush="{x:Null}" Foreground="White"
                 FontSize="18" HorizontalContentAlignment="Center"
                 Text="{Binding DocumentName, ElementName=Window, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
