<Window x:Name="Window" x:Class="FountainEditorGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FountainEditor" Height="350" Width="525" Background="#f888">
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#ffb2d5e6" Offset="0"/>
            <GradientStop Color="#ff8dc7e2" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Height="20" Width="Auto" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
            </MenuItem>
        </Menu>
        <TextBox Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" FontFamily="Courier Prime" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" AcceptsTab="True" />
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" FontFamily="Courier Prime" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" AcceptsTab="True" Text="{Binding ScriptText, ElementName=Window, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
