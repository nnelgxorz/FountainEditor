<Window x:Name="Window" x:Class="FountainEditorGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FountainEditor" Height="350" Width="525" WindowState="Maximized" Background="#F888">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="172*"/>
            <ColumnDefinition Width="233*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu IsMainMenu="True" Height="20" Width="Auto" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="0" Margin="10,0,0,0">
            <Menu.Background>
                <SolidColorBrush Color="#f888"/>
            </Menu.Background>
            <MenuItem Header="File" Click="MenuItem_Click">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Export"/>
                <MenuItem Header="Print"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Options">
                <MenuItem Header="Print Options">
                    <MenuItem Header="Print Sections" IsCheckable="True"/>
                    <MenuItem Header="Print Synopsis" IsCheckable="True"/>
                    <MenuItem Header="Print Notes" IsCheckable="True"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Layout">
                    <MenuItem Header="Split Dialogue Between Pages" IsCheckable="True"/>
                    <MenuItem Header="Bold Scene Headings" IsCheckable="True"/>
                    <MenuItem Header="Double Space Scene Headings" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Learn Syntax"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <TreeView Grid.Column="0" Grid.Row="1" FontFamily="Courier Prime" ScrollViewer.CanContentScroll="True" Margin="0,0,5,0"/>
        <TextBox Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" FontFamily="Courier Prime" ScrollViewer.CanContentScroll="True" AcceptsReturn="True" AcceptsTab="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Text="{Binding ScriptText, ElementName=Window, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
